@model IEnumerable<Restaurant_Management_System_CRUD.Models.Table>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
           <hr>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <img src="~/TableImage/@item.Image" height="150px" width="200px" />  
                <h4>
                @item.Name <br>
                </h4>
                <h4>
                @item.NoOfChair <br>
                </h4>
                <p>
                @item.Description <br>
                </p>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                <a asp-action="Create" asp-controller="Reservation" class="btn btn-info">Reserve</a> 
                <br><br>
            </div>
        }
    </div>
    <hr>
</div>
